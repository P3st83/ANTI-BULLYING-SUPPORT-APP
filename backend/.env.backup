# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/anti_bullying_db
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Authentication & Security
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys
OPENAI_API_KEY=your-openai-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
FROM_EMAIL=support@your-domain.com

# App Configuration
APP_NAME=Anti-Bullying Support App
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Content Safety
ENABLE_CONTENT_MODERATION=true
ENABLE_AI_SAFETY_CHECKS=true

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_KEY=your-analytics-key
# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5555,http://localhost:8081

# Content Safety Patterns
PERSONAL_INFO_PATTERNS=\\b\\d{3}-\\d{3}-\\d{4}\\b,\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b,\\b\\d{1,5}\\s\\w+\\s(Street|St|Avenue|Ave|Road|Rd|Drive|Dr|Lane|Ln|Boulevard|Blvd)\\b

INAPPROPRIATE_CONTENT_KEYWORDS=violence,drugs,alcohol,inappropriate,explicit

EMERGENCY_KEYWORDS=suicide,kill myself,hurt myself,end it all,want to die,self harm,cutting,overdose
